@{
  Layout="Shared/_Layout.cshtml";
}

<div class="row">
  <div class="col-md-2">
    <div class="btn-group-vertical">
      <form action="/places/new" method="get">
        <button type="submit" class="btn btn-default">Add a Place</button>
      </form>
      <form action="/places/clear" method="post">
        <button type="submit" class="btn btn-default">Clear All Places</button>
      </form>
    </div>
  </div>
  <div class="col-md-10">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">@Model.GetName()</h3>
      </div>
      <div class="panel-body">
        <p>I visited @Model.GetName() in the @Model.GetSeason().</p>
        <p>I stayed there for @Model.GetDuration() days.</p>
      </div>
    </div>
  </div>
</div>
