@{
  Layout="Shared/_Layout.cshtml";
}

<div class="row">
  <div class="col-md-2">
    <div class="btn-group-vertical">
      <form action="/places/new" method="get">
        <button type="submit" class="btn btn-default">Add a Place</button>
      </form>
      <form action="/places/clear" method="post">
        <button type="submit" class="btn btn-default">Clear All Places</button>
      </form>
    </div>
  </div>
  <div class="col-md-10">
    @if (Model.Count > 0) {
      <ul>
      @foreach(var place in Model)
      {
        <li><a href="/places/@place.GetId()">@place.GetName()</a></li>
      }
      </ul>
    } else {
      <h3>To start using the app, click one of the buttons at left!</h3>
    }
  </div>
</div>
